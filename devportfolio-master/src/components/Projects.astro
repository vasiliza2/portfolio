---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Учебные проекты
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={{ backgroundColor: siteConfig.accentColor }}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.projects.map((project, index) => {
                const hasLinks = project.links && project.links.length > 0;

                return (
                  <div class="group relative">
                    <div
                      class={`block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 ${
                        hasLinks
                          ? "hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1"
                          : ""
                      }`}
                    >
                      <div class="space-y-4">
                        <div>
                          <span
                            class="text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          {/* Название проекта - обычный текст */}
                          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                            {project.name}
                          </h3>
                        </div>

                        <p class={`text-base sm:text-lg text-gray-600 leading-relaxed`}>
                          {project.description}
                        </p>

                        {/* --- БЛОК: Несколько текстовых ссылок (без иконок) --- */}
                        {hasLinks && (
                          <div class="pt-4 space-y-2">
                            {project.links.map((link) => (
                              <a
                                href={link.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="block text-base sm:text-lg font-medium text-gray-700 transition-colors duration-200 w-fit border-b border-transparent hover:text-gray-900 hover:border-gray-900"
                              >
                                <span>{link.label}</span>
                              </a>
                            ))}
                          </div>
                        )}
                        {/* --------------------------------------------------- */}

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-4 border-t border-gray-200 mt-4">
                            {project.skills.map((skill) => (
                              <span
                                class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 group-hover:bg-gray-800"
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}